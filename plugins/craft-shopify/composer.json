{
    "name": "leo/craft-shopify",
    "type": "craft-plugin",
    "require": {
        "php": ">=8.0.2",
        "craftcms/cms": "^4.7.0",
        "phpclassic/php-shopify": "^1.2.9"
    },
    "require-dev": {
        "craftcms/ecs": "dev-main",
        "craftcms/phpstan": "dev-main"
    },
    "autoload": {
        "psr-4": {
            "leo\\craftshopify\\": "src/"
        }
    },
    "extra": {
        "name": "Craft Shopify",
        "handle": "craft-shopify",
        "developer": "leo",
        "documentationUrl": "",
        "components": {
            "craftShopifyService": "leo\\craftshopify\\services\\CraftShopifyService"
        },
        "class": "leo\\craftshopify\\CraftShopify"
    },
    "scripts": {
        "check-cs": "ecs check --ansi",
        "fix-cs": "ecs check --ansi --fix",
        "phpstan": "phpstan --memory-limit=1G"
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "8.0.2"
        },
        "allow-plugins": {
            "yiisoft/yii2-composer": true,
            "craftcms/plugin-installer": true
        }
    }
}